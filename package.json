{
  "name": "sf3-3rd-strike-playcanvas",
  "version": "2.0.0",
  "description": "Street Fighter III: 3rd Strike - PlayCanvas Edition",
  "main": "src/index.ts",
  "scripts": {
    "build:client": "esbuild src/index.ts --bundle --platform=browser --format=iife --global-name=SF3App --outfile=public/bundle.js --sourcemap --target=es2020",
    "build": "npm run build:client",
    "postbuild": "mkdir -p public/data && cp -r data/* public/data/ || true",
    "dev": "npm run build:client -- --watch",
    "start": "npm run build && npm run serve",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "fix": "npx ts-node tools/fix_compilation_errors.ts",
    "convert": "npx ts-node tools/complete_typescript_conversion.ts",
    "serve": "http-server . -p 5000 -c-1"
  },
  "dependencies": {
    "@vercel/node": "^3.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "express": "^4.18.2",
    "fastify": "^5.5.0",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "playcanvas": "^1.65.3",
    "uuid": "^11.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "street-fighter",
    "fighting-game",
    "playcanvas",
    "typescript",
    "game-development"
  ],
  "author": "SF3 Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
