{
  "installCommand": "npm ci",
  "buildCommand": "npm run build && npm run postbuild",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/", "destination": "/api/index" },
    { "source": "/api/manifest", "destination": "/api/manifest" },
    { "source": "/api/session", "destination": "/api/session" },
    { "source": "/api/analytics/(.*)", "destination": "/api/analytics" },
    { "source": "/api/store/(.*)", "destination": "/api/store" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Permissions-Policy", "value": "interest-cohort=()" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' '/_vercel/insights/script.js' '/_vercel/speed-insights/script.js'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https: data: blob:; media-src 'self' data: blob:; font-src 'self' data:; worker-src 'self' blob:" }
      ]
    },
    {
      "source": "/bundle.js",
      "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ]
    },
    {
      "source": "/bundle.js.map",
      "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ]
    },
    {
      "source": "/assets/manifest.json",
      "headers": [ { "key": "Cache-Control", "value": "no-store" } ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ]
    },
    {
      "source": "/data/(.*)",
      "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ]
    }
  ]
}
