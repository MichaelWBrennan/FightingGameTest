{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "objectives.v1.json",
  "title": "Daily and Weekly Objectives Configuration",
  "description": "Configuration for player objectives and challenges",
  "type": "object",
  "required": ["version", "dailyObjectives", "weeklyObjectives", "masteryTracks"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration version"
    },
    "dailyObjectives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "type", "target", "rewards"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique objective identifier"
          },
          "name": {
            "type": "string",
            "description": "Objective display name"
          },
          "description": {
            "type": "string",
            "description": "Objective description"
          },
          "type": {
            "type": "string",
            "enum": ["matches_played", "matches_won", "perfect_rounds", "lab_completed", "mentor_session"],
            "description": "Type of objective"
          },
          "target": {
            "type": "integer",
            "minimum": 1,
            "description": "Target value to complete objective"
          },
          "rewards": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "amount"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["account_xp", "character_xp", "mastery_points"]
                },
                "amount": {
                  "type": "integer",
                  "minimum": 1
                },
                "characterSpecific": {
                  "type": "boolean",
                  "description": "Whether reward applies to specific character"
                }
              }
            }
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Probability weight for assignment"
          },
          "skillLevel": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced", "any"],
            "description": "Target skill level for this objective"
          }
        }
      }
    },
    "weeklyObjectives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "type", "target", "rewards"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique objective identifier"
          },
          "name": {
            "type": "string",
            "description": "Objective display name"
          },
          "description": {
            "type": "string",
            "description": "Objective description"
          },
          "type": {
            "type": "string",
            "enum": ["weekly_wins", "archetype_mastery", "ranked_progression", "club_participation", "mentor_hours"],
            "description": "Type of objective"
          },
          "target": {
            "type": "integer",
            "minimum": 1,
            "description": "Target value to complete objective"
          },
          "rewards": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "amount"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["account_xp", "character_xp", "mastery_points", "cosmetic_unlock", "title_unlock"]
                },
                "amount": {
                  "type": "integer",
                  "minimum": 1
                },
                "itemId": {
                  "type": "string",
                  "description": "Item ID for unlock rewards"
                }
              }
            }
          },
          "weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Probability weight for assignment"
          },
          "prerequisite": {
            "type": "string",
            "description": "Required condition to unlock this objective"
          }
        }
      }
    },
    "masteryTracks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "milestones"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique mastery track identifier"
          },
          "name": {
            "type": "string",
            "description": "Mastery track display name"
          },
          "type": {
            "type": "string",
            "enum": ["account", "character", "archetype"],
            "description": "Type of mastery track"
          },
          "characterId": {
            "type": "string",
            "description": "Character ID (for character tracks)"
          },
          "archetypeId": {
            "type": "string",
            "description": "Archetype ID (for archetype tracks)"
          },
          "milestones": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["level", "xpRequired", "rewards"],
              "properties": {
                "level": {
                  "type": "integer",
                  "minimum": 1
                },
                "xpRequired": {
                  "type": "integer",
                  "minimum": 0
                },
                "rewards": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["type", "itemId"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["cosmetic", "title", "banner", "announcer", "vfx_palette"]
                      },
                      "itemId": {
                        "type": "string"
                      }
                    }
                  }
                },
                "prestigeUnlock": {
                  "type": "boolean",
                  "description": "Whether this level unlocks prestige"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}