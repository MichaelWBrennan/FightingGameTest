{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "club_event.v1.json",
  "title": "Club Event",
  "description": "Tracks social club interactions and activities",
  "type": "object",
  "required": ["event", "v", "ts", "userId", "clubId", "action", "sessionHash"],
  "properties": {
    "event": {
      "type": "string",
      "const": "club_event"
    },
    "v": {
      "type": "string",
      "const": "1.0"
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp in seconds"
    },
    "userId": {
      "type": "string",
      "pattern": "^u_[a-zA-Z0-9]+$",
      "description": "Unique user identifier"
    },
    "clubId": {
      "type": "string",
      "pattern": "^c_[a-zA-Z0-9]+$",
      "description": "Unique club identifier"
    },
    "action": {
      "type": "string",
      "enum": ["created", "joined", "left", "invited", "promoted", "demoted", "objective_completed", "trophy_earned"],
      "description": "Type of club action performed"
    },
    "sessionHash": {
      "type": "string",
      "pattern": "^s_[a-zA-Z0-9]+$",
      "description": "Session this event occurred in"
    },
    "targetUserId": {
      "type": "string",
      "pattern": "^u_[a-zA-Z0-9]+$",
      "description": "Target user for actions like invite/promote (optional)"
    },
    "clubRole": {
      "type": "string",
      "enum": ["member", "officer", "leader"],
      "description": "User's role in the club"
    },
    "objectiveId": {
      "type": "string",
      "description": "ID of completed objective (if applicable)"
    },
    "trophyId": {
      "type": "string",
      "description": "ID of earned trophy (if applicable)"
    },
    "clubSize": {
      "type": "integer",
      "minimum": 1,
      "description": "Current number of club members"
    },
    "clubLevel": {
      "type": "integer",
      "minimum": 1,
      "description": "Current club level"
    }
  },
  "additionalProperties": false
}