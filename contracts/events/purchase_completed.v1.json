{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "purchase_completed.v1.json", 
  "title": "Purchase Completed Event",
  "description": "Tracks successful purchases in the store",
  "type": "object",
  "required": ["event", "v", "ts", "userId", "transactionId", "totalAmount", "currency", "items", "sessionHash"],
  "properties": {
    "event": {
      "type": "string",
      "const": "purchase_completed"
    },
    "v": {
      "type": "string",
      "const": "1.0"
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp in seconds"
    },
    "userId": {
      "type": "string",
      "pattern": "^u_[a-zA-Z0-9]+$",
      "description": "Unique user identifier"
    },
    "transactionId": {
      "type": "string",
      "description": "Payment processor transaction ID"
    },
    "totalAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Total purchase amount including tax"
    },
    "currency": {
      "type": "string", 
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["itemId", "itemType", "price", "quantity"],
        "properties": {
          "itemId": {
            "type": "string",
            "description": "Store item identifier"
          },
          "itemType": {
            "type": "string",
            "enum": ["skin", "title", "banner", "announcer", "vfx_palette", "bundle"],
            "description": "Type of item purchased"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Individual item price"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "description": "Quantity purchased"
          }
        }
      },
      "description": "Items included in this purchase"
    },
    "sessionHash": {
      "type": "string",
      "pattern": "^s_[a-zA-Z0-9]+$",
      "description": "Session this purchase occurred in"
    },
    "paymentMethod": {
      "type": "string",
      "enum": ["card", "paypal", "apple_pay", "google_pay"],
      "description": "Payment method used"
    },
    "bundleDiscount": {
      "type": "number",
      "minimum": 0,
      "description": "Discount amount if bundle was purchased"
    },
    "taxAmount": {
      "type": "number",
      "minimum": 0,
      "description": "Tax amount included in total"
    },
    "firstPurchase": {
      "type": "boolean",
      "description": "Whether this was the user's first purchase"
    }
  },
  "additionalProperties": false
}