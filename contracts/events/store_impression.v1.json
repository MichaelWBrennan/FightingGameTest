{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "store_impression.v1.json",
  "title": "Store Impression Event",
  "description": "Tracks when a player views items in the store",
  "type": "object", 
  "required": ["event", "v", "ts", "userId", "storeSection", "sessionHash"],
  "properties": {
    "event": {
      "type": "string",
      "const": "store_impression"
    },
    "v": {
      "type": "string",
      "const": "1.0"
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp in seconds"
    },
    "userId": {
      "type": "string",
      "pattern": "^u_[a-zA-Z0-9]+$",
      "description": "Unique user identifier"
    },
    "storeSection": {
      "type": "string",
      "enum": ["featured", "cosmetics", "characters", "bundles", "seasonal"],
      "description": "Section of store being viewed"
    },
    "sessionHash": {
      "type": "string",
      "pattern": "^s_[a-zA-Z0-9]+$",
      "description": "Session this impression occurred in"
    },
    "itemsViewed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["itemId", "price", "currency"],
        "properties": {
          "itemId": {
            "type": "string",
            "description": "Store item identifier"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Item price in local currency"
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$",
            "description": "ISO 4217 currency code"
          },
          "onSale": {
            "type": "boolean",
            "description": "Whether item is currently on sale"
          },
          "returnWindowDays": {
            "type": "integer",
            "minimum": 0,
            "description": "Days until item returns to store"
          }
        }
      },
      "description": "Items that were visible during this impression"
    },
    "viewDurationMs": {
      "type": "integer",
      "minimum": 0,
      "description": "How long the store section was viewed"
    },
    "clickedItems": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Item IDs that were clicked for details"
    }
  },
  "additionalProperties": false
}