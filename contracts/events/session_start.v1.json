{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "session_start.v1.json",
  "title": "Session Start Event",
  "description": "Tracks when a player starts a game session",
  "type": "object",
  "required": ["event", "v", "ts", "userId", "sessionHash"],
  "properties": {
    "event": {
      "type": "string",
      "const": "session_start"
    },
    "v": {
      "type": "string",
      "const": "1.0"
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp in seconds"
    },
    "userId": {
      "type": "string",
      "pattern": "^u_[a-zA-Z0-9]+$",
      "description": "Unique user identifier"
    },
    "sessionHash": {
      "type": "string",
      "pattern": "^s_[a-zA-Z0-9]+$",
      "description": "Unique session identifier"
    },
    "platform": {
      "type": "string",
      "enum": ["web", "mobile", "desktop"],
      "description": "Platform the session started on"
    },
    "clientVersion": {
      "type": "string",
      "description": "Client version string"
    },
    "returningPlayer": {
      "type": "boolean",
      "description": "Whether this is a returning player"
    },
    "daysSinceLastSession": {
      "type": "integer",
      "minimum": 0,
      "description": "Days since last session (0 for new players)"
    }
  },
  "additionalProperties": false
}